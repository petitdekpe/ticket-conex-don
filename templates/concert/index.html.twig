{% extends 'base.html.twig' %}

{% block title %}Concert index{% endblock %}

{% block body %}
<div class="sm:ml-72 mt-10">
    <div class="flex justify-between items-center">
        <h1 class="text-bold text-3xl mb-10">Concert</h1>
        <a href="{{ path('app_concert_new') }}"><button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 mr-20 rounded mb-10">Ajouter</button></a>
    </div>


    <div class="relative overflow-x-auto shadow-md sm:rounded-lg mr-20">
        <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
            <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                <tr>
                    <th scope="col" class="px-6 py-3">
                        Concert
                    </th>
                    <th scope="col" class="px-6 py-3">
                        <div class="flex items-center">
                            Date
                            <a href="#">
                                <svg class="w-3 h-3 ms-1.5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24">
                                    <path d="M8.574 11.024h6.852a2.075 2.075 0 0 0 1.847-1.086 1.9 1.9 0 0 0-.11-1.986L13.736 2.9a2.122 2.122 0 0 0-3.472 0L6.837 7.952a1.9 1.9 0 0 0-.11 1.986 2.074 2.074 0 0 0 1.847 1.086Zm6.852 1.952H8.574a2.072 2.072 0 0 0-1.847 1.087 1.9 1.9 0 0 0 .11 1.985l3.426 5.05a2.123 2.123 0 0 0 3.472 0l3.427-5.05a1.9 1.9 0 0 0 .11-1.985 2.074 2.074 0 0 0-1.846-1.087Z"/>
                                </svg>
                            </a>
                        </div>
                    </th>
                    <th scope="col" class="px-6 py-3">
                        <div class="flex items-center">
                            Lieu
                            <a href="#">
                                <svg class="w-3 h-3 ms-1.5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24">
                                    <path d="M8.574 11.024h6.852a2.075 2.075 0 0 0 1.847-1.086 1.9 1.9 0 0 0-.11-1.986L13.736 2.9a2.122 2.122 0 0 0-3.472 0L6.837 7.952a1.9 1.9 0 0 0-.11 1.986 2.074 2.074 0 0 0 1.847 1.086Zm6.852 1.952H8.574a2.072 2.072 0 0 0-1.847 1.087 1.9 1.9 0 0 0 .11 1.985l3.426 5.05a2.123 2.123 0 0 0 3.472 0l3.427-5.05a1.9 1.9 0 0 0 .11-1.985 2.074 2.074 0 0 0-1.846-1.087Z"/>
                                </svg>
                            </a>
                        </div>
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Cover
                    </th>
                    <th scope="col" class="px-6 py-3">
                        <span class="sr-only">Modifier</span>
                    </th>
                </tr>
            </thead>
            <tbody>
                {% for concert in concerts %}
                    <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
                        <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                            {{ concert.nom }}
                        </th>
                        <td class="px-6 py-4">
                            {{ concert.date ? concert.date|date('j F Y') : '' }}
                        </td>
                        <td class="px-6 py-4">
                            {{ concert.lieu }}
                        </td>
                        <td class="px-6 py-4">
                             <a href="{{ vich_uploader_asset(concert, 'image') }}"><img src="{{ vich_uploader_asset(concert, 'image') }}" alt="ConcertImage" style="max-width: 40px;"></a>
                        </td>
                        <td class="px-6 py-4 text-right">
                            <a href="{{ path('app_concert_edit', {'id': concert.id}) }}" class="font-medium text-blue-600 dark:text-blue-500 hover:underline">Modifier</a>
                        </td>
                    </tr>
                {% else %}
                    <tr class="flex justify-center">
                        <td class="px-6 py-4" colspan="12">Aucun concert enregistr√©</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div

</div>
{% endblock %}
