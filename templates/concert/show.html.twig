{% extends 'base.html.twig' %}

{% block title %}Concert{% endblock %}

{% block body %}
<div class="sm:ml-72 mt-10">
    <h1>Concert</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ concert.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ concert.nom }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ concert.date ? concert.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Lieu</th>
                <td>{{ concert.lieu }}</td>
            </tr>
            <tr>
                <th>Artiste</th>
                <td>{{ concert.artiste }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_concert_index') }}">back to list</a>

    <a href="{{ path('app_concert_edit', {'id': concert.id}) }}">edit</a>

    {{ include('concert/_delete_form.html.twig') }}
</div>
{% endblock %}
